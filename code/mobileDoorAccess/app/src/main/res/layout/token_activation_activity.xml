<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#ff0073cf"
    android:paddingLeft="15dp" android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:clickable="false"
    android:id="@+id/token_activation_activity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ff0a4f9b">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Step 1"
            android:id="@+id/textViewStep1"
            android:layout_weight="0.5"
            android:textColor="#ff004f9b"
            android:gravity="center"
            android:background="#ff0073cf"
            android:autoText="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewStep2"
            android:layout_weight="0.5"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:text="Step 2"
            android:background="#ff0a4f9b" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your TUMOnline token:"
        android:background="#ff0a4f9b"
        android:singleLine="false"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:paddingTop="80dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="DUMMY TOKEN 12 12 12 12 12 "
        android:id="@+id/textViewToken"
        android:background="#ff0a4f9b"
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="• Please visit TUMOnline\n• Activate Token:\n Home -> 'Token-Management'\n• Return to this screen and update token status"
        android:background="#ff0a4f9b"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:gravity="left"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ff0a4f9b"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ffefefef"
            android:text="Open TUMOnline"
            android:layout_weight="0.5"
            android:onClick="visitTUMOnlineClick"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#ffbcbcbc"
            android:text="Check token status"
            android:onClick="checkTokenStatusClick"/>

    </LinearLayout>

</LinearLayout>